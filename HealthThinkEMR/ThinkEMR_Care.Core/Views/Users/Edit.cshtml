@model ThinkEMR_Care.Core.Models.StaffUser
@{
    ViewData["Title"] = "Edit StaffUser";
}
@using (Html.BeginForm("Edit", "Users", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <!-- Modal -->
    <div class="modal fade" id="staticEditBackdrop" tabindex="-1" aria-labelledby="staticEditBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="form">
            <div class="modal-content">
                <div class="modal-header" style="text-align: center;">
                    <h5 class="modal-title" style="text-align: center;"><b>Edit Staff User</b></h5>
                </div>
                <div class="modal-body">
                    <div>
                        <input type="hidden" asp-for="Id" id="editId" />
                        <div class="d-flex">
                            <div class="form-group col-md-6">
                                <label asp-for="LastName">Last Name</label>
                                <input asp-for="LastName" class="form-control" id="editLastName"/>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="FirstName">First Name</label>
                                <input asp-for="FirstName" class="form-control" id="editFirstName" />
                            </div>
                        </div>

                        <div class="d-flex">
                            <div class="form-group col-md-6">
                                <label asp-for="Email">Email</label>
                                <input asp-for="Email" class="form-control" id="editEmail" />
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="ContactNumber">Contact Number</label>
                                <input asp-for="ContactNumber" class="form-control" id="editContactNumber" />
                            </div>
                        </div>
                        <div class="d-flex">
                            <div class="form-group col-md-6">
                                <label asp-for="Role">Role</label>
                                <select id="editRole" asp-for="Role" class="form-control">
                                    <option value="Facility Admin">Facility Admin</option>
                                    <option value="Specialist">Specialist</option>
                                    <option value="Primary Care Provider">Primary Care Provider</option>
                                    <option value="Physician Assistant">Physician Assistant</option>
                                    <option value="Physician">Physician</option>
                                </select>
                            </div>
                            @*<div class="form-group col-md-6">
                        <label asp-for="UserId">UserId</label>
                        <input asp-for="UserId" class="form-control" />
                        </div>*@
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" id="saveRecordButton">Save</button>
                </div>
            </div>
        </div>
    </div>

}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        img {
            /*border: 5px solid #000; /* Add a border to the image */ */
            /*border-radius: 80px;*/
            width: 100%; /* Make the image responsive within its container */
            max-width: 300px; /* Limit the maximum width of the image */
            height: auto; /* Maintain aspect ratio */
        }

        table {
            width: 100%;
        }

        th {
            font-weight: bold;
        }

        /* Add some spacing between table rows */
        tr {
            margin-bottom: 10px;
        }

        /* Style your buttons with Bootstrap classes */
        .btn {
            margin: 5px;
        }
    </style>
</head>
<body>
    <div>
        <!-- Buttons (you may need to add Bootstrap for these to work) -->
        <div style="float: left;">
            <button class="btn btn-primary">Profile</button>
            <button class="btn btn-primary">Locations</button>
            <button class="btn btn-primary">Departments</button>
            <button class="btn btn-primary">Patients</button>
            <button class="btn btn-primary">Users</button>
        </div>

        <div style="float: right;">
            <button class="btn btn-primary">Cancel</button>
            <button class="btn btn-primary">Edit Profile</button>
        </div>
        <div style="clear: both;"></div> <!-- Clear the float to prevent overlapping content -->
    </div>
    <br />

    <div class="row">
        <div class="col-3" style="float: left;">
            <div>
                <img src="~/hospital-windows.jpg" alt="Profile Image" class=" float-left" />
            </div>
        </div>
        <div class="col-9">
            <table>
                <tr>
                    <th>Provider Group Name</th>
                    <td>: @Model.ProviderGroupName</td>
                </tr>
                <tr>
                    <th>Website</th>
                    <td>: @Model.Website</td>
                </tr>
                <tr>
                    <th>Email Id</th>
                    <td>: @Model.EmailId</td>
                </tr>
                <tr>
                    <th>Speciality</th>
                    <td>: @Model.SpecialityType</td>
                </tr>
                <tr>
                    <th>Contact Number</th>
                    <td>: @Model.ContactNumber</td>
                </tr>
                <tr>
                    <th>Group NPI Number</th>
                    <td>: @Model.GroupNPINumber</td>
                </tr>
                <tr>
                    <th>Physical Address</th>
                    <td>: @Model.PhysicalAddressId</td>
                </tr>
            </table>
        </div>
        <div style="clear: both;"></div>
    </div>
    <div>
        @RenderBody()
    </div>
</body>
</html>
